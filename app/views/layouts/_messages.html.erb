<% flash.each do |kind, msg| %>
  <% if msg.is_a?(String) %>
    <div class="alert <%= bootstrap_class_for_flash_kind(kind) %> alert-dismissable fade in">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= msg %>
    </div>
  <% end %>
<% end %>
