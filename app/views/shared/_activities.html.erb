<% if activities.blank? %>
  <p>
    There is nothing to display right now.
  </p>
  <p>
    <% if user_signed_in? %>
      Please perform actions to generate some activities.
    <% else %>
      Please login then perform actions to generate some activities.
    <% end %>
  </p>
<% else %>
  <div id='activities'>
    <% activities.each do |activity| %>
      <%= render :partial => "shared/activity", :locals => { :activity => activity } %>
    <% end %>
  </div>
  <% if activities.is_a?(Kaminari::PaginatableArray) %>
    <%= paginate(activities) %>
  <% end %>
<% end %>
