<% provide(:title, "New album") %>

<div class="col-md-6 col-md-offset-3">
  <%= simple_form_for(@album) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name, :placeholder => 'My great album', :required => true, :autofocus => true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Create Album", :class => 'btn-primary' %>
    </div>
  <% end %>
</div>
